<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="analyzer.GUI.Controller">
   <children>
      <Button fx:id="fcButtonSelect" layoutX="131.0" layoutY="329.0" mnemonicParsing="false" onAction="#fileChooser" text="Select your properties file" />
      <Button fx:id="runButton" layoutX="471.0" layoutY="363.0" mnemonicParsing="false" onAction="#runAnalyzer" prefHeight="25.0" prefWidth="133.0" text="Run Analyzer" />
      <RadioButton fx:id="radioData" layoutX="329.0" layoutY="367.0" mnemonicParsing="false" onAction="#getRunType" text="data">
         <toggleGroup>
            <ToggleGroup fx:id="runFlag" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="radioReport" layoutX="395.0" layoutY="367.0" mnemonicParsing="false" onAction="#getRunType" text="report" toggleGroup="$runFlag" />
      <Label fx:id="runTypeLabel" layoutX="14.0" layoutY="367.0" prefHeight="17.0" prefWidth="269.0" text="Select your runType" />
      <TextArea fx:id="console" layoutX="-7.0" layoutY="400.0" prefHeight="200.0" prefWidth="617.0" />
      <TextArea fx:id="fcBody" layoutY="42.0" prefHeight="275.0" prefWidth="603.0" />
      <TextField fx:id="fcPath" editable="false" layoutX="-1.0" layoutY="14.0" prefHeight="25.0" prefWidth="603.0" />
      <Button fx:id="fcButtonSave" layoutX="346.0" layoutY="329.0" mnemonicParsing="false" onAction="#fileSaver" prefHeight="25.0" prefWidth="152.0" text="Save to properties file" />
   </children>
</AnchorPane>
